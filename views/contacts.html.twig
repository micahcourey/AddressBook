<html>
<head>
<title>Contacts</title>
</head>
<body>
    <h1>Contacts List</h1>

    {% if places is not empty %}
        <p>List of my contacts:</p>
        <ul>
            {% for place in places %}
                <li> Name: {{ contact.getName }} Phone Number: {{ contact.getPhoneNumber }} Address: {{ contact.getAddress }}</li>
            {% endfor %}
        </ul>
    {% endif %}

    <form action='/create_contact' method='post'>
        <label for='name'>Place Visited</label>
        <input id='name' name='name' type='text'>

        <label for='phone_number'>Time Stayed</label>
        <input id='phone_number' name='phone_number' type='text'>

        <label for='address'>Time Stayed</label>
        <input id='address' name='address' type='text'>

        <button type='submit'>Add new contact</button>
    </form>
    <form action='/delete_contacts' method='post'>
        <button type='submit'>Clear</button>
    </form>
</body>
</html>
